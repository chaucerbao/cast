{
  "name": "@chaucerbao/cast",
  "version": "0.2.0",
  "description": "Install package and configuration defaults for various tools to kick-start your project",
  "author": "Alvin Chan <no@email.com>",
  "license": "ISC",
  "bin": {
    "cast": "bin/cli.js"
  },
  "files": [
    "bin/cli.js",
    "configs/*",
    "cast.json"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "prettier --write",
    ".*rc": "prettier --write --parser json",
    "*.{json,md}": "prettier --write"
  },
  "devDependencies": {
    "@types/node": "^14.0.14",
    "@types/shelljs": "^0.8.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "shelljs": "^0.8.5"
  },
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "prepare": "npm run build"
  }
}
