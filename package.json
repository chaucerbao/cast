{
  "name": "@chaucerbao/cast",
  "version": "0.1.0",
  "description": "Install package and configuration defaults for various tools to kick-start your project",
  "author": "Alvin Chan <no@email.com>",
  "license": "ISC",
  "bin": {
    "cast": "bin/cli.js"
  },
  "files": [
    "bin/cli.js",
    "configs/*",
    "cast.json"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ],
      ".*rc": [
        "prettier --write --parser json",
        "git add"
      ],
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  },
  "devDependencies": {
    "@types/node": "^10.12.1",
    "@types/shelljs": "^0.8.0",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.5"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "shelljs": "^0.8.2"
  },
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  }
}
